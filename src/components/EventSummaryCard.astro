---
type Props = {
  title: string;
  summary?: string;
  href?: string;
  era?: string;
  date?: string;
  tags?: string[];
};

const { title, summary, href, era, date, tags = [] } = Astro.props as Props;
const hasTags = tags.length > 0;
---

<div class="event-timeline-item">
  <div class="event-timeline-item__node"></div>
  
  <div class="event-timeline-item__grid">
    <div class="event-timeline-item__side-info">
      {era ? <span class="event-timeline-item__era">{era}</span> : null}
      {date ? <h3 class="event-timeline-item__date">{date}</h3> : null}
    </div>

    <article class="event-timeline-item__card">
      <header class="event-timeline-item__card-header">
        <h4 class="event-timeline-item__card-title">
          {href ? <a href={href}>{title}</a> : title}
        </h4>
        {href ? (
          <span class="material-symbols-outlined event-timeline-item__link-icon" aria-hidden="true">
            open_in_new
          </span>
        ) : null}
      </header>
      
      {summary ? <p class="event-timeline-item__summary">{summary}</p> : null}
      
      {hasTags ? (
        <ul class="event-timeline-item__tags">
          {tags.map((tag) => (
            <li class="event-timeline-item__tag">{tag}</li>
          ))}
        </ul>
      ) : null}
    </article>
  </div>
</div>

<style>
  .event-timeline-item {
    position: relative;
    padding: var(--space-6) 0;
  }

  /* The vertical line */
  .event-timeline-item::before {
    content: '';
    position: absolute;
    left: 1rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background: linear-gradient(to bottom, transparent, var(--color-accent), var(--color-accent), transparent);
    opacity: 0.2;
  }

  .event-timeline-item__node {
    position: absolute;
    left: 1rem;
    top: var(--space-8);
    transform: translate(-50%, -50%);
    width: 12px;
    height: 12px;
    background: var(--color-accent);
    border-radius: var(--radius-pill);
    box-shadow: 0 0 10px var(--color-accent);
    border: 2px solid var(--color-bg);
    z-index: 2;
  }

  .event-timeline-item__grid {
    display: grid;
    gap: var(--space-4);
    padding-left: var(--space-7);
  }

  .event-timeline-item__side-info {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .event-timeline-item__era {
    font-size: 0.65rem;
    font-weight: 700;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: var(--space-1);
  }

  .event-timeline-item__date {
    margin: 0;
    font-family: var(--font-mono);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .event-timeline-item__card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    padding: var(--space-5);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-soft);
    transition: all 0.3s ease;
  }

  .event-timeline-item__card:hover {
    border-color: rgba(43, 108, 238, 0.5);
    transform: translateY(-2px);
  }

  .event-timeline-item__card-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
  }

  .event-timeline-item__card-title {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.2;
  }

  .event-timeline-item__card-title a {
    color: inherit;
    text-decoration: none;
  }

  .event-timeline-item__link-icon {
    font-size: 1rem;
    color: var(--color-muted);
    opacity: 0.5;
  }

  .event-timeline-item__card:hover .event-timeline-item__link-icon {
    color: var(--color-accent);
    opacity: 1;
  }

  .event-timeline-item__summary {
    margin: 0 0 var(--space-4);
    font-size: 0.95rem;
    color: var(--color-muted);
    line-height: 1.6;
  }

  .event-timeline-item__tags {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .event-timeline-item__tag {
    font-size: 0.65rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.2rem 0.5rem;
    border-radius: var(--radius-pill);
    background: var(--color-surface-muted);
    color: var(--color-muted);
  }

  /* Desktop Styles: Alternating Zig-Zag */
  @media (min-width: 900px) {
    .event-timeline-item::before {
      left: 50%;
    }

    .event-timeline-item__node {
      left: 50%;
    }

    .event-timeline-item__grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-8);
      padding-left: 0;
      align-items: center;
    }

    /* Odd items: Info on Left, Card on Right */
    :global(.event-timeline-item:nth-child(odd) .event-timeline-item__side-info) {
      text-align: right;
      padding-right: var(--space-4);
    }

    :global(.event-timeline-item:nth-child(odd) .event-timeline-item__card) {
      grid-column: 2;
    }

    /* Even items: Card on Left, Info on Right (Reverse) */
    :global(.event-timeline-item:nth-child(even) .event-timeline-item__grid) {
      direction: rtl; /* Flip columns */
    }

    :global(.event-timeline-item:nth-child(even) .event-timeline-item__grid > *) {
      direction: ltr; /* Restore text direction */
    }

    :global(.event-timeline-item:nth-child(even) .event-timeline-item__side-info) {
      text-align: left;
      padding-left: var(--space-4);
    }
  }
</style>
