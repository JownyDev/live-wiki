---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

type Props = {
  action: string;
  triggers: string[];
  notes?: string[];
  filters?: string[];
  icon?: string;
};

const { action, triggers, notes = [], filters = [], icon } = Astro.props as Props;
const formattedAction = action.replace(/_/g, ' ').replace(/^\w/, (c) => c.toUpperCase());
const hasNotes = notes.length > 0;
const hasFilters = filters.length > 0;
---

<article class="capability-card">
  <header class="capability-card__header">
    <h3 class="capability-card__title">{formattedAction}</h3>
    {icon ? (
      <span class="material-symbols-outlined capability-card__icon" aria-hidden="true">
        {icon}
      </span>
    ) : null}
  </header>
  <div class="capability-card__body">
    <div class="capability-card__section">
      <p class="capability-card__label">{t('ui.triggers')}</p>
      <div class="capability-card__tags tag-list">
        {triggers.map((trigger) => (
          <span class="capability-card__tag">{trigger}</span>
        ))}
      </div>
    </div>
    {hasNotes ? (
      <div class="capability-card__section">
        <p class="capability-card__label">{t('ui.notes')}</p>
        <ul class="capability-card__notes">
          {notes.map((note) => (
            <li>{note}</li>
          ))}
        </ul>
      </div>
    ) : null}
    {hasFilters ? (
      <div class="capability-card__filter">
        {filters.length === 1 ? (
          <p class="capability-card__filter-text">{filters[0]}</p>
        ) : (
          <ul class="capability-card__filter-list">
            {filters.map((filter) => (
              <li class="capability-card__filter-text">{filter}</li>
            ))}
          </ul>
        )}
      </div>
    ) : null}
  </div>
</article>
