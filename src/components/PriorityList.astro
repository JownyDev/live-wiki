---
type Props = {
  label: string;
  items: string[];
  icon?: string;
  itemIcon?: string;
  emptyText?: string;
};

const { label, items, icon, itemIcon, emptyText } = Astro.props as Props;
const hasItems = items.length > 0;
const shouldRender = hasItems || typeof emptyText === 'string';
---

{shouldRender ? (
  <div class="priority-list">
    <h3 class="priority-list__label">
      {icon ? (
        <span
          class="material-symbols-outlined priority-list__label-icon"
          aria-hidden="true"
        >
          {icon}
        </span>
      ) : null}
      {label}
    </h3>
    {hasItems ? (
      <div class="priority-list__items tag-list">
        {items.map((item) => (
          <div class="priority-list__item">
            {itemIcon ? (
              <span
                class="material-symbols-outlined priority-list__item-icon"
                aria-hidden="true"
              >
                {itemIcon}
              </span>
            ) : (
              <span class="priority-list__dot" aria-hidden="true"></span>
            )}
            <span class="priority-list__text">{item}</span>
          </div>
        ))}
      </div>
    ) : (
      <p class="priority-list__empty">{emptyText}</p>
    )}
  </div>
) : null}

<style>
  .priority-list {
    padding: var(--space-4);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    background: var(--color-surface);
    display: grid;
    gap: var(--space-3);
  }

  .priority-list__label {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin: 0;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-accent);
  }

  .priority-list__icon {
    font-size: 0.9rem;
  }

  .priority-list__item {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: 0.4rem 0.75rem;
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    background: var(--color-surface-muted);
  }

  .priority-list__label-icon {
    font-size: 0.9rem;
  }

  .priority-list__dot {
    width: 0.35rem;
    height: 0.35rem;
    border-radius: var(--radius-pill);
    background: #f5b14a;
  }

  .priority-list__item-icon {
    font-size: 0.9rem;
    color: #f5b14a;
  }

  .priority-list__text {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text);
  }

  .priority-list__empty {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-muted);
  }
</style>
