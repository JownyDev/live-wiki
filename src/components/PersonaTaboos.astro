---
import PersonaCard from './PersonaCard.astro';

type Props = {
  items: string[];
};

const { items } = Astro.props as Props;
---

<PersonaCard title="Taboos" icon="block">
  <ul class="persona-taboos">
    {items.map((item) => (
      <li>{item}</li>
    ))}
  </ul>
</PersonaCard>

<style>
  .persona-taboos {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .persona-taboos li {
    padding: 0.2rem 0.65rem;
    border-radius: var(--radius-md);
    border: 1px solid rgba(248, 113, 113, 0.4);
    background: rgba(248, 113, 113, 0.12);
    font-size: var(--text-sm);
    font-weight: 600;
    color: #f87171;
  }
</style>
