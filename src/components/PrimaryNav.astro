---
import EntityLink from './EntityLink.astro';

type NavItem = {
  href: string;
  label: string;
  icon: string;
};

const items: NavItem[] = [
  { href: '/characters', label: 'Personajes', icon: 'group' },
  { href: '/events', label: 'Eventos', icon: 'event' },
  { href: '/places', label: 'Lugares', icon: 'place' },
  { href: '/planets', label: 'Planetas', icon: 'public' },
  { href: '/elements', label: 'Elementos', icon: 'auto_awesome' },
  { href: '/cards', label: 'Cartas', icon: 'style' },
  { href: '/mechanics', label: 'Mecanicas', icon: 'tune' },
];
---

<nav class="primary-nav" aria-label="Navegacion principal">
  <ul class="primary-nav__list">
    {items.map((item) => (
      <li>
        <EntityLink href={item.href} label={item.label} icon={item.icon} />
      </li>
    ))}
  </ul>
</nav>

<style>
  .primary-nav {
    justify-self: start;
    max-width: 100%;
    overflow-x: auto;
    scrollbar-width: none;
  }

  .primary-nav__list {
    display: flex;
    flex-wrap: nowrap;
    gap: var(--space-2) var(--space-3);
    list-style: none;
    margin: 0;
    padding: 0;
    font-size: 0.85rem;
    white-space: nowrap;
  }

  .primary-nav::-webkit-scrollbar {
    display: none;
  }

  :global(.primary-nav .entity-link) {
    color: var(--color-muted);
    font-weight: 500;
  }

  :global(.primary-nav .entity-link:hover) {
    color: var(--color-accent);
  }

  :global(.primary-nav .entity-link__icon) {
    font-size: 0.9rem;
  }
</style>
