---
export type ObjectStatItem = {
  label: string;
  min: number;
  max: number;
};

type Props = {
  title: string;
  minLabel: string;
  maxLabel: string;
  items: ObjectStatItem[];
};

const { title, minLabel, maxLabel, items } = Astro.props as Props;
---

{items.length > 0 ? (
  <section class="object-stats-grid">
    <h3 class="object-stats-grid__title">{title}</h3>
    <div class="object-stats-grid__items">
      {items.map((item) => (
        <article class="object-stats-grid__item">
          <h4 class="object-stats-grid__label">{item.label}</h4>
          <dl class="object-stats-grid__range">
            <div>
              <dt>{minLabel}</dt>
              <dd>{item.min}</dd>
            </div>
            <div>
              <dt>{maxLabel}</dt>
              <dd>{item.max}</dd>
            </div>
          </dl>
        </article>
      ))}
    </div>
  </section>
) : null}

<style>
  .object-stats-grid {
    margin-top: var(--space-6);
  }

  .object-stats-grid__title {
    margin: 0 0 var(--space-4);
    font-size: var(--text-sm);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-accent);
  }

  .object-stats-grid__items {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: var(--space-4);
  }

  .object-stats-grid__item {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    background: var(--color-surface);
    padding: var(--space-4);
  }

  .object-stats-grid__label {
    margin: 0 0 var(--space-3);
    font-size: var(--text-base);
    color: var(--color-text);
  }

  .object-stats-grid__range {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
    margin: 0;
  }

  .object-stats-grid__range dt {
    margin: 0;
    font-size: var(--text-xs);
    color: var(--color-muted);
  }

  .object-stats-grid__range dd {
    margin: var(--space-1) 0 0;
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-text);
  }
</style>
