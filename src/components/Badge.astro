---
export type BadgeVariant = 'default' | 'muted' | 'missing';

type Props = {
  label: string;
  variant?: BadgeVariant;
};

const { label, variant = 'default' } = Astro.props;

const variantStyles: Record<BadgeVariant, string> = {
  default: 'opacity-90',
  muted: 'text-muted',
  missing: 'text-muted line-through',
};

const baseStyles = "badge inline-flex items-center px-2 py-0.5 rounded-pill text-[0.75rem] leading-none border border-border bg-surface text-text";
---

<span class={`${baseStyles} ${variantStyles[variant]}`}>{label}</span>
