---
export type BadgeVariant = 'default' | 'muted' | 'missing';

type Props = {
  label: string;
  variant?: BadgeVariant;
};

const { label, variant = 'default' } = Astro.props;

const variantStyles: Record<BadgeVariant, string> = {
  default: 'badge--default',
  muted: 'badge--muted',
  missing: 'badge--missing',
};

const baseStyles = "badge";
---

<span class={`${baseStyles} ${variantStyles[variant]}`}>{label}</span>
