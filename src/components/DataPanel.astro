---
export type DataPanelItem = {
  label: string;
  value: string;
  href?: string;
  icon?: string;
};

type Props = {
  title: string;
  items: DataPanelItem[];
  emptyText?: string;
};

const { title, items, emptyText } = Astro.props as Props;
const hasItems = items.length > 0;
const shouldRender = hasItems || typeof emptyText === 'string';
---

{shouldRender ? (
  <section class="data-panel">
    <h3 class="data-panel__title">{title}</h3>
    {hasItems ? (
      <dl class="data-panel__list">
        {items.map((item) => (
          <div class="data-panel__item">
            <dt class="data-panel__label">{item.label}</dt>
            <dd class="data-panel__value">
              {item.icon ? (
                <span class="data-panel__icon" aria-hidden="true">{item.icon}</span>
              ) : null}
              {item.href ? <a href={item.href}>{item.value}</a> : <span>{item.value}</span>}
            </dd>
          </div>
        ))}
      </dl>
    ) : (
      <p class="data-panel__empty">{emptyText}</p>
    )}
  </section>
) : null}

<style>
  .data-panel {
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    background: var(--color-surface);
    overflow: hidden;
  }

  .data-panel__title {
    margin: 0;
    padding: var(--space-3) var(--space-4);
    font-size: 1rem;
    font-weight: 700;
    background: var(--color-surface-muted, rgba(255, 255, 255, 0.04));
    border-bottom: 1px solid var(--color-border);
  }

  .data-panel__list {
    margin: 0;
    padding: var(--space-4);
    display: grid;
    gap: var(--space-3);
  }

  .data-panel__item {
    display: grid;
    gap: var(--space-1);
  }

  .data-panel__label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-muted);
    font-weight: 600;
  }

  .data-panel__value {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    margin: 0;
    font-size: 0.95rem;
    color: var(--color-text);
  }

  .data-panel__icon {
    font-size: 0.9rem;
    color: var(--color-accent);
  }

  .data-panel__empty {
    margin: 0;
    padding: var(--space-4);
    color: var(--color-muted);
    font-size: 0.9rem;
  }

  .data-panel a {
    color: inherit;
    text-decoration: none;
  }

  .data-panel a:hover {
    color: var(--color-accent);
    text-decoration: underline;
  }
</style>
