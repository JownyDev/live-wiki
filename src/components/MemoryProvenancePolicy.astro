---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import MemoryProfileCard from './MemoryProfileCard.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

type Props = {
  allowed: string[];
  defaultValue: string;
};

const { allowed, defaultValue } = Astro.props as Props;
---

<MemoryProfileCard title={t("ui.provenance_policy")} icon="policy">
  <div class="memory-provenance">
    <div class="mb-4">
      <p class="text-xs font-bold uppercase text-muted mb-2">Permitido</p>
      <div class="tag-list">
        {allowed.map(item => <span class="tag">{item}</span>)}
      </div>
    </div>
    <div>
      <p class="text-xs font-bold uppercase text-muted mb-2">Por defecto</p>
      <span class="text-sm font-medium">{defaultValue}</span>
    </div>
  </div>
</MemoryProfileCard>