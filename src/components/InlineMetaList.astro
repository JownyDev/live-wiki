---
export type InlineMetaItem = {
  label: string;
  value: string;
};

type Props = {
  items: InlineMetaItem[];
  separator?: string;
};

const { items, separator = '|' } = Astro.props as Props;
const hasItems = items.length > 0;
const showSeparator = separator.length > 0;
---

{hasItems ? (
  <dl class="inline-meta">
    {items.map((item, index) => (
      <div class="inline-meta__item">
        <dt class="inline-meta__label">{item.label}</dt>
        <dd class="inline-meta__value">{item.value}</dd>
        {showSeparator && index < items.length - 1 ? (
          <span class="inline-meta__separator" aria-hidden="true">{separator}</span>
        ) : null}
      </div>
    ))}
  </dl>
) : null}

<style>
  .inline-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    gap: var(--space-1) var(--space-3);
    margin: 0;
    font-size: 0.95rem;
    color: var(--color-muted);
  }

  .inline-meta__item {
    display: inline-flex;
    align-items: baseline;
    gap: var(--space-1);
    margin: 0;
  }

  .inline-meta__label {
    font-weight: 600;
    text-transform: none;
  }

  .inline-meta__value {
    margin: 0;
  }

  .inline-meta__separator {
    margin-left: var(--space-1);
    color: inherit;
  }
</style>
