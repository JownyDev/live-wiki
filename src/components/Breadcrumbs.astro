---
export type BreadcrumbItem = {
  label: string;
  href?: string;
  current?: boolean;
};

type Props = {
  items: BreadcrumbItem[];
  ariaLabel?: string;
};

const { items, ariaLabel = 'Breadcrumb' } = Astro.props as Props;
const normalizedItems = items.map((item, index) => ({
  ...item,
  current: item.current ?? (!item.href && index === items.length - 1),
}));
---

<nav class="breadcrumbs" aria-label={ariaLabel}>
  <ol class="breadcrumbs__list">
    {normalizedItems.map((item, index) => (
      <li class="breadcrumbs__item">
        {index > 0 ? (
          <span class="breadcrumbs__separator" aria-hidden="true">/</span>
        ) : null}
        {item.href && !item.current ? (
          <a href={item.href}>{item.label}</a>
        ) : (
          <span aria-current={item.current ? 'page' : undefined}>{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  .breadcrumbs__list {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-1) var(--space-2);
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-3);
    font-size: 0.85rem;
    color: var(--color-muted);
  }

  .breadcrumbs__item {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
  }

  .breadcrumbs__separator {
    color: inherit;
  }

  .breadcrumbs a {
    color: inherit;
    text-decoration: none;
  }

  .breadcrumbs a:hover {
    color: var(--color-text);
  }

  .breadcrumbs [aria-current='page'] {
    color: var(--color-text);
    font-weight: 600;
  }
</style>
