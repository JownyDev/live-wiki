---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import MemoryProfileCard from './MemoryProfileCard.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

type Props = {
  interestTags: string[];
  relationshipTags: string[];
  allowedTags: string[];
  blockedTags: string[];
};

const { interestTags, relationshipTags, allowedTags, blockedTags } = Astro.props as Props;
---

<MemoryProfileCard title={t("ui.tags")} icon="sell">
  <div class="memory-tags space-y-4">
    {interestTags.length > 0 && (
      <div>
        <p class="text-xs font-bold uppercase text-muted mb-2">Intereses</p>
        <div class="tag-list">
          {interestTags.map(tag => <span class="tag tag--accent">{tag}</span>)}
        </div>
      </div>
    )}
    {relationshipTags.length > 0 && (
      <div>
        <p class="text-xs font-bold uppercase text-muted mb-2">Relaciones</p>
        <div class="tag-list">
          {relationshipTags.map(tag => <span class="tag tag--primary">{tag}</span>)}
        </div>
      </div>
    )}
  </div>
</MemoryProfileCard>