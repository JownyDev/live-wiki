---
type PersonaCardSpan = 'wide' | 'full';

type Props = {
  title: string;
  icon?: string;
  span?: PersonaCardSpan;
};

const { title, icon, span } = Astro.props as Props;

const spanStyles: Record<PersonaCardSpan, string> = {
  wide: 'md:col-span-2',
  full: 'col-span-full',
};

const className = `persona-card p-space-5 rounded-md border border-border bg-surface grid gap-space-3 ${span ? spanStyles[span] : ''}`;
---

<div class={className}>
  <h3 class="persona-card__label flex items-center gap-space-2 m-0 text-[0.65rem] font-bold uppercase tracking-[0.14em] text-accent">
    {icon ? (
      <span class="material-symbols-outlined persona-card__icon text-[0.9rem]" aria-hidden="true">
        {icon}
      </span>
    ) : null}
    {title}
  </h3>
  <div class="persona-card__content grid gap-space-3">
    <slot />
  </div>
</div>
