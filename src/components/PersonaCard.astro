---
type PersonaCardSpan = 'wide' | 'full';

type Props = {
  title: string;
  icon?: string;
  span?: PersonaCardSpan;
};

const { title, icon, span } = Astro.props as Props;
const className = span ? `persona-card persona-card--${span}` : 'persona-card';
---

<div class={className}>
  <h3 class="persona-card__label">
    {icon ? (
      <span class="material-symbols-outlined persona-card__icon" aria-hidden="true">
        {icon}
      </span>
    ) : null}
    {title}
  </h3>
  <div class="persona-card__content">
    <slot />
  </div>
</div>

<style>
  .persona-card {
    padding: var(--space-4);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    background: var(--color-surface);
    display: grid;
    gap: var(--space-2);
  }

  .persona-card__label {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin: 0;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-accent);
  }

  .persona-card__icon {
    font-size: 0.9rem;
  }

  .persona-card__content {
    display: grid;
    gap: var(--space-2);
  }

  @media (min-width: 720px) {
    .persona-card--wide {
      grid-column: span 2 / span 2;
    }
  }

  .persona-card--full {
    grid-column: 1 / -1;
  }
</style>
