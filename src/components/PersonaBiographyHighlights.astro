---
import PersonaCard from './PersonaCard.astro';

type Props = {
  items: string[];
};

const { items } = Astro.props as Props;
const hasItems = items.length > 0;
---

{hasItems ? (
  <PersonaCard title="Biography Highlights" span="full" icon="menu_book">
    <ul class="persona-highlights">
      {items.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </PersonaCard>
) : null}

<style>
  .persona-highlights {
    margin: 0;
    padding-left: 1.1rem;
    list-style: disc;
    list-style-position: inside;
    display: grid;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text);
  }

  @media (min-width: 720px) {
    .persona-highlights {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      column-gap: var(--space-4);
    }
  }
</style>
