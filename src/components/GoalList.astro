---
type Props = {
  label: string;
  items: string[];
  emptyText?: string;
};

const { label, items, emptyText } = Astro.props as Props;
const hasItems = items.length > 0;
const shouldRender = hasItems || typeof emptyText === 'string';
---

{shouldRender ? (
  <div class="goal-list">
    <h3 class="goal-list__label">{label}</h3>
    {hasItems ? (
      <ul class="goal-list__items">
        {items.map((item) => (
          <li class="goal-list__item">
            <span class="goal-list__dot" aria-hidden="true"></span>
            <span class="goal-list__text">{item}</span>
          </li>
        ))}
      </ul>
    ) : (
      <p class="goal-list__empty">{emptyText}</p>
    )}
  </div>
) : null}

<style>
  .goal-list {
    padding: var(--space-4);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    background: var(--color-surface);
    display: grid;
    gap: var(--space-3);
  }

  .goal-list__label {
    margin: 0;
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-accent);
  }

  .goal-list__items {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: var(--space-2);
  }

  .goal-list__item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-2);
  }

  .goal-list__dot {
    width: 0.45rem;
    height: 0.45rem;
    border-radius: var(--radius-pill);
    background: var(--color-accent);
    margin-top: 0.35rem;
    flex-shrink: 0;
  }

  .goal-list__text {
    font-size: var(--text-sm);
    color: var(--color-muted);
    line-height: 1.5;
  }

  .goal-list__empty {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-muted);
  }
</style>
