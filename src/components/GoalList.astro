---
type Props = {
  label: string;
  items: string[];
  icon?: string;
  itemIcon?: string;
  emptyText?: string;
};

const { label, items, icon, itemIcon, emptyText } = Astro.props as Props;
const hasItems = items.length > 0;
const shouldRender = hasItems || typeof emptyText === 'string';
---

{shouldRender ? (
  <div class="goal-list">
    <h3 class="goal-list__label">
      {icon ? (
        <span class="material-symbols-outlined goal-list__icon" aria-hidden="true">
          {icon}
        </span>
      ) : null}
      {label}
    </h3>
    {hasItems ? (
      <ul class="goal-list__items">
        {items.map((item) => (
          <li class="goal-list__item">
            {itemIcon ? (
              <span
                class="material-symbols-outlined goal-list__item-icon"
                aria-hidden="true"
              >
                {itemIcon}
              </span>
            ) : (
              <span class="goal-list__dot" aria-hidden="true"></span>
            )}
            <span class="goal-list__text">{item}</span>
          </li>
        ))}
      </ul>
    ) : (
      <p class="goal-list__empty">{emptyText}</p>
    )}
  </div>
) : null}
