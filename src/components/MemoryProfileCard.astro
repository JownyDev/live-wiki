---
type Props = {
  title: string;
  icon?: string;
};

const { title, icon } = Astro.props as Props;
---

<div class="memory-card">
  <h3 class="memory-card__title">
    {icon ? (
      <span class="material-symbols-outlined memory-card__icon" aria-hidden="true">
        {icon}
      </span>
    ) : null}
    {title}
  </h3>
  <div class="memory-card__content">
    <slot />
  </div>
</div>
