---
import { Icon } from 'astro-icon/components';

type Props = {
  title: string;
  icon?: string;
  class?: string;
  contentClass?: string;
};

const { title, icon, class: className, contentClass } = Astro.props as Props;
---

<div class:list={["memory-card", className]}>
  <h3 class="memory-card__title">
    {icon ? (
      <Icon name={`material-symbols:${icon}`} class="memory-card__icon" aria-hidden="true" />
    ) : null}
    {title}
  </h3>
  <div class:list={["memory-card__content", contentClass]}>
    <slot />
  </div>
</div>
