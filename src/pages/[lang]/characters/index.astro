---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Header from '../../../components/Header.astro';
import Section from '../../../components/Section.astro';
import CharacterList from '../../../components/CharacterList.astro';
import { listCharacters } from '../../../lib/content/characters';
import { languages } from '../../../i18n/ui';
import { useTranslations } from '../../../i18n/utils';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const t = useTranslations(lang as any);

const title = t('nav.characters');
const characters = await listCharacters();
---

<BaseLayout title={title} lang={lang as any}>
  <Header title={title} icon="group" />
  
  <Section>
    <div class="max-w-prose mb-12">
      <p class="text-muted text-sm">{t('desc.characters')}</p>
    </div>
    <CharacterList characters={characters} />
  </Section>
</BaseLayout>