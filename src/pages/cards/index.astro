---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import EntityList from '../../components/EntityList.astro';
import Section from '../../components/Section.astro';
import { listCards } from '../../lib/content/cards';

const title = 'Cartas';
const cards = await listCards();

const cardItems = cards.map(c => ({
  label: c.name,
  href: `/cards/${c.id}`
}));
---

<BaseLayout title={title}>
  <Header title={title} icon="style" />
  <Section>
    <p class="text-muted text-sm mb-12">Colección de cartas y artefactos legendarios.</p>
    {cards.length === 0 ? (
      <p>No hay cartas todavía.</p>
    ) : (
      <EntityList items={cardItems} />
    )}
  </Section>
</BaseLayout>
