---
import Header from '../../components/Header.astro';
import EntityLink from '../../components/EntityLink.astro';
import Section from '../../components/Section.astro';
import { listCards } from '../../lib/content/cards';

const title = 'Cartas';
const cards = await listCards();
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <Header title={title} />
      <Section>
        {cards.length === 0 ? (
          <p>No hay cartas todav√≠a.</p>
        ) : (
          <ul>
            {cards.map((card) => (
              <li>
                <EntityLink href={`/cards/${card.id}`} label={card.name} />
              </li>
            ))}
          </ul>
        )}
      </Section>
    </main>
  </body>
</html>
