---
import Header from '../../components/Header.astro';
import EntityLink from '../../components/EntityLink.astro';
import Section from '../../components/Section.astro';
import { listPlaces } from '../../lib/content/places';

const title = 'Lugares';
const places = await listPlaces();
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <Header title={title} />
      <Section>
        {places.length === 0 ? (
          <p>No hay lugares todav√≠a.</p>
        ) : (
          <ul>
            {places.map((place) => (
              <li>
                <EntityLink href={`/places/${place.id}`} label={place.name} />
              </li>
            ))}
          </ul>
        )}
      </Section>
    </main>
  </body>
</html>
