---
import { listPlaces } from '../../lib/content/places';

const title = 'Lugares';
const places = await listPlaces();
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <h1>{title}</h1>
      {places.length === 0 ? (
        <p>No hay lugares todav√≠a.</p>
      ) : (
        <ul>
          {places.map((place) => (
            <li>
              <a href={`/places/${place.id}`}>{place.name}</a>
            </li>
          ))}
        </ul>
      )}
    </main>
  </body>
</html>
