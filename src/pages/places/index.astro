---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import EntityList from '../../components/EntityList.astro';
import Section from '../../components/Section.astro';
import { listPlaces } from '../../lib/content/places';

const title = 'Lugares';
const places = await listPlaces();

const placeItems = places.map(p => ({
  label: p.name,
  href: `/places/${p.id}`
}));
---

<BaseLayout title={title}>
  <Header title={title} icon="place" />
  <Section>
    <p class="text-muted text-sm mb-12">Localizaciones y puntos de interés en los distintos planetas.</p>
    {places.length === 0 ? (
      <p>No hay lugares todavía.</p>
    ) : (
      <EntityList items={placeItems} />
    )}
  </Section>
</BaseLayout>
