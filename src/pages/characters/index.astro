---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Section from '../../components/Section.astro';
import CharacterList from '../../components/CharacterList.astro';
import { listCharacters } from '../../lib/content/characters';

const title = 'Personajes';
const characters = await listCharacters();
---

<BaseLayout title={title} lang="es">
  <Header title={title} icon="group" />
  
  <Section>
    <p class="text-muted text-sm mb-12">Explora los personajes del universo.</p>
    <CharacterList characters={characters} />
  </Section>
</BaseLayout>
