---
import { listEvents } from '../../lib/content/events';

const title = 'Eventos';
const events = await listEvents();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <h1>{title}</h1>
      {events.length === 0 ? (
        <p>No hay eventos todavÃ­a.</p>
      ) : (
        <ul>
          {events.map((event) => (
            <li>
              <a href={`/events/${event.id}`}>{event.title}</a>
              <span> ({event.date})</span>
            </li>
          ))}
        </ul>
      )}
    </main>
  </body>
</html>
