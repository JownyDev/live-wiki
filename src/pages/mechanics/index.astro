---
import { listMechanics } from '../../lib/content/mechanics';

const title = 'Mecanicas';
const mechanics = await listMechanics();
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <h1>{title}</h1>
      {mechanics.length === 0 ? (
        <p>No hay mecanicas todav√≠a.</p>
      ) : (
        <ul>
          {mechanics.map((mechanic) => (
            <li>
              <a href={`/mechanics/${mechanic.id}`}>{mechanic.name}</a>
            </li>
          ))}
        </ul>
      )}
    </main>
  </body>
</html>
