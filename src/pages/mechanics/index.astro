---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import EntityList from '../../components/EntityList.astro';
import Section from '../../components/Section.astro';
import { listMechanics } from '../../lib/content/mechanics';

const title = 'Mecanicas';
const mechanics = await listMechanics();

const mechanicItems = mechanics.map(m => ({
  label: m.name,
  href: `/mechanics/${m.id}`
}));
---

<BaseLayout title={title}>
  <Header title={title} icon="tune" />
  <Section>
    <p class="text-muted text-sm mb-12">Sistemas y mecánicas de juego que rigen el universo.</p>
    {mechanics.length === 0 ? (
      <p>No hay mecanicas todavía.</p>
    ) : (
      <EntityList items={mechanicItems} />
    )}
  </Section>
</BaseLayout>
