---
import Header from '../../components/Header.astro';
import EntityLink from '../../components/EntityLink.astro';
import Section from '../../components/Section.astro';
import { listElements } from '../../lib/content/elements';

const title = 'Elementos';
const elements = await listElements();
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <Header title={title} />
      <Section>
        {elements.length === 0 ? (
          <p>No hay elementos todav√≠a.</p>
        ) : (
          <ul>
            {elements.map((element) => (
              <li>
                <EntityLink href={`/elements/${element.id}`} label={element.name} />
              </li>
            ))}
          </ul>
        )}
      </Section>
    </main>
  </body>
</html>
