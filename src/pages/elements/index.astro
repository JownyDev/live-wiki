---
import { listElements } from '../../lib/content/elements';

const title = 'Elementos';
const elements = await listElements();
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <h1>{title}</h1>
      {elements.length === 0 ? (
        <p>No hay elementos todav√≠a.</p>
      ) : (
        <ul>
          {elements.map((element) => (
            <li>
              <a href={`/elements/${element.id}`}>{element.name}</a>
            </li>
          ))}
        </ul>
      )}
    </main>
  </body>
</html>
