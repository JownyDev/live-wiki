---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import EntityList from '../../components/EntityList.astro';
import Section from '../../components/Section.astro';
import { listElements } from '../../lib/content/elements';

const title = 'Elementos';
const elements = await listElements();

const elementItems = elements.map(e => ({
  label: e.name,
  href: `/elements/${e.id}`
}));
---

<BaseLayout title={title}>
  <Header title={title} icon="auto_awesome" />
  <Section>
    <p class="text-muted text-sm mb-12">Lista de elementos fundamentales conocidos en el universo.</p>
    {elements.length === 0 ? (
      <p>No hay elementos todav√≠a.</p>
    ) : (
      <EntityList items={elementItems} />
    )}
  </Section>
</BaseLayout>
