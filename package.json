{
  "name": "live-wiki",
  "author": "live-wiki",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .ts,.astro",
    "format": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:e2e": "playwright test",
    "quality": "pnpm lint && pnpm typecheck && vitest --run",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "verify": "pnpm quality && pnpm build",
    "wiki:check": "pnpm --filter wiki-cli run build && node packages/wiki-cli/dist/index.js check",
    "wiki:build": "pnpm --filter wiki-cli run build && node packages/wiki-cli/dist/index.js build",
    "wiki:new": "pnpm --filter wiki-cli run build && node packages/wiki-cli/dist/index.js new",
    "build:docs": "typedoc"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.3",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "astro": "^4.16.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-astro": "^1.5.0",
    "prettier": "^3.7.0",
    "typedoc": "^0.28.16",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4",
    "wiki-cli": "workspace:*"
  },
  "dependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "gray-matter": "^4.0.3",
    "marked": "^17.0.1",
    "sanitize-html": "^2.17.0",
    "tailwindcss": "^3.4.19"
  }
}
