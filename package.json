{
  "name": "live-wiki",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint . --ext .ts,.astro",
    "format": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "quality": "pnpm lint && pnpm typecheck && pnpm test --run",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "verify": "pnpm quality && pnpm build",
    "wiki:check": "pnpm -C packages/wiki-cli build && pnpm exec wiki check",
    "wiki:build": "pnpm -C packages/wiki-cli build && pnpm exec wiki build",
    "wiki:new": "pnpm -C packages/wiki-cli build && pnpm exec wiki new"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "astro": "^4.16.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-astro": "^1.5.0",
    "prettier": "^3.7.0",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4",
    "wiki-cli": "workspace:*"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^17.0.1"
  }
}
